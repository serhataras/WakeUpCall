<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.groupnamenotfoundexception.wakeupcall.app.activities.games.MatchTheObjectsActivity">
    <GridLayout android:columnCount="6" android:rowCount="6" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/matchbutton0" android:layout_row="0" android:layout_column="0"
            android:background="#00FFFFFF"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton1" android:layout_row="0" android:layout_column="1"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton2" android:layout_row="0" android:layout_column="5"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" android:background="#00FFFFFF"
                android:id="@+id/matchbutton3" android:layout_row="1" android:layout_column="5"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton4" android:layout_row="5" android:layout_column="5"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton5" android:layout_row="5" android:layout_column="4"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton6" android:layout_row="5" android:layout_column="0"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton7" android:layout_row="4" android:layout_column="0"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" android:background="#00FFFFFF"
            android:id="@+id/matchbutton8" android:layout_row="2" android:layout_column="2"/>
        <ImageButton
                android:layout_width="50dp" android:background="#00FFFFFF"
                android:layout_height="50dp"
                android:id="@+id/matchbutton9" android:layout_row="3" android:layout_column="3"/>
    </GridLayout>
</RelativeLayout>

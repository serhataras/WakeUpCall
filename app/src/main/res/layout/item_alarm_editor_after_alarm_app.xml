<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <view android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          class="android.support.v7.widget.CardView" android:id="@+id/afterAlarmCard"
          android:layout_gravity="center_horizontal" android:layout_margin="10dp">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="After Alarm App"
                android:id="@+id/afterAlarmAppTitle"/>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_below="@+id/afterAlarmAppTitle"
                android:layout_alignParentStart="true">
            <ImageView android:id="@+id/icon"
                       android:drawable="@drawable/ic_launcher"
                       android:layout_width="45dp"
                       android:layout_height="45dp"
                       android:paddingLeft="2px"
                       android:paddingTop="3px"
                       android:paddingBottom="3px"
                       android:paddingRight="3px"
                       android:layout_below="@+id/afterAlarmAppTitle" android:layout_alignParentEnd="true"
                       android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>
            <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Select an App"
                    android:paddingTop="2px"
                    android:paddingBottom="2px"
                    android:layout_centerVertical="true" android:layout_toStartOf="@+id/icon"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select App"
                    android:id="@+id/appSelector"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" android:onClick="showAppSelector"/>
        </RelativeLayout>
    </RelativeLayout>
    </view>
</LinearLayout>
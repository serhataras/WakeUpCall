<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <view android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          class="android.support.v7.widget.CardView" android:id="@+id/view" android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" android:layout_margin="10dp">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <view android:layout_width="wrap_content"
              android:layout_height="250dp"
              class="lecho.lib.hellocharts.view.LineChartView" android:id="@+id/lineChart"
              android:layout_below="@+id/graphTitle" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Line Graph"
                android:id="@+id/graphTitle"/>
    </RelativeLayout>
    </view>
</RelativeLayout>